# Environment Variables for Healthcare Q&A Assistant

# OpenAI API Configuration (if using OpenAI models)
OPENAI_API_KEY=your_openai_api_key_here

# Hugging Face API Configuration (alternative to OpenAI)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Application Settings
APP_TITLE=Healthcare Document Q&A Assistant
MAX_FILE_SIZE_MB=50
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Vector Store Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
VECTOR_STORE_PATH=./vectorstore

# LLM Configuration
# Options: openai, huggingface, local
LLM_PROVIDER=huggingface
LLM_MODEL_NAME=microsoft/DialoGPT-medium
TEMPERATURE=0.1
MAX_TOKENS=500